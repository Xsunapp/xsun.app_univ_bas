<script>
    function copyAddress(event) {
        event.preventDefault(); // Prevent default anchor behavior
        const address = "0xEf06e2D9C18680316E63944be3d881093Aa8d542"; // Smart contract address
        navigator.clipboard.writeText(address).then(() => {
            // Show the notification
            const notification = document.getElementById('copyNotification');
            notification.style.display = 'block';
            // Position the notification near the link
            const rect = event.target.getBoundingClientRect();
            notification.style.left = (rect.left + rect.width / 2) + 'px';
            notification.style.top = (rect.bottom + window.scrollY + 5) + 'px'; // Position below the button
            setTimeout(() => {
                notification.style.display = 'none'; // Hide after 3 seconds
            }, 3000);
        });
    }
</script>

